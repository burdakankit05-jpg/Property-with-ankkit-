  </main>  <script>
    // simple language toggle: English <-> Hindi
    const langBtn = document.getElementById('langBtn');
    let showingEN = true;
    langBtn.addEventListener('click', () => {
      showingEN = !showingEN;
      document.querySelectorAll('[data-en]').forEach(el => el.style.display = showingEN ? '' : 'none');
      document.querySelectorAll('[data-hi]').forEach(el => el.style.display = showingEN ? 'none' : '');
      langBtn.textContent = showingEN ? 'English / हिन्दी' : 'English / हिन्दी';
    });

    // Accessibility: allow enter to click WhatsApp links when focused
    document.querySelectorAll('.whatsapp').forEach(el => {
      el.setAttribute('role', 'button');
      el.addEventListener('keydown', e => { if(e.key === 'Enter') el.click(); });
    });
  </script></body>
